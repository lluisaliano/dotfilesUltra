// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  "edit_predictions": {
    "mode": "eager"
  },
  "use_system_window_tabs": false,
  "context_servers": {},
  "agent_ui_font_size": 19.0,
  "agent_buffer_font_size": 19.0,
  "bottom_dock_layout": "contained",
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show": true
  },
  "title_bar": {
    "show_menus": false,
    "show_sign_in": true,
    "show_user_picture": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_branch_name": true,
    "show_branch_icon": true
  },
  "debugger": {
    "button": true
  },
  "search": {
    "button": true
  },
  "diagnostics": {
    "inline": {
      "min_column": 0,
      "padding": 4,
      "enabled": true
    },
    "button": true
  },
  "terminal": {
    "button": true
  },
  "status_bar": {
    "cursor_position_button": true,
    "active_language_button": true
  },
  "minimap": {
    "show": "never"
  },
  "auto_signature_help": false,
  "base_keymap": "VSCode",
  "session": {
    "restore_unsaved_buffers": false
  },
  "toolbar": {
    "code_actions": false,
    "quick_actions": true,
    "selections_menu": true,
    "agent_review": false,
    "breadcrumbs": true
  },
  "relative_line_numbers": "enabled",
  "project_panel": {
    "button": true,
    "entry_spacing": "standard",
    "indent_size": 20.0,
    "git_status": true,
    "folder_icons": false,
    "file_icons": true,
    "hide_gitignore": false,
    "default_width": 230.0
  },
  "active_pane_modifiers": {
    "border_size": 0.0
  },
  "centered_layout": {
    "left_padding": 0.2
  },
  "ssh_connections": [
    {
      "host": "minipc",
      "args": [],
      "projects": [
        {
          "paths": [
            "/home/lluis"
          ]
        }
      ]
    }
  ],
  "ui_font_weight": 400.0,
  "vim_mode": true,
  "ui_font_family": "JetBrainsMono Nerd Font",
  "buffer_line_height": "standard",
  "buffer_font_weight": 400.0,
  "icon_theme": "Catppuccin Mocha",
  "languages": {
    "C++": {
      "format_on_save": "on",
      "show_edit_predictions": false,
      "formatter": "language_server"
    },
    "LaTeX": {
      "show_edit_predictions": true
    },
    "Python": {
      "language_servers": [
        "basedpyright",
        "ruff",
        "!ty"
      ] // To disable basedpyright (Which is for types and enable antoher, like ty, use !basedpyright and add "ty"
    },
    "TSX": {
      "language_servers": [
        "!eslint",
        "!typescript-language-server",
        "..."
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "TypeScript": {
      "language_servers": [
        "!eslint",
        "!typescript-language-server",
        "..."
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    },
    "JavaScript": {
      "language_servers": [
        "!eslint",
        "!typescript-language-server",
        "..."
      ],
      "formatter": {
        "language_server": {
          "name": "biome"
        }
      }
    }
  },
  "lsp": {
    "biome": {
      "settings": {}
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "show_edit_predictions": true,
  "agent": {
    "enable_feedback": false,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    }
  },
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "cursor_shape": "bar",
  "cursor_blink": true,
  "current_line_highlight": "none",
  "ui_font_size": 20.0,
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_size": 19.0,
  "theme": {
    "mode": "system",
    "light": "Vercel Dark",
    "dark": "Vercel Dark"
  },
  "buffer_font_family": "Mononoki Nerd Font Mono",
  "show_completion_documentation": false,
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "tabs": {
    "show_close_button": "hover",
    "git_status": true,
    "file_icons": true
  },
  "tab_size": 2,
  "hard_tabs": false
}
