// Some example tasks for common languages.
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Debug CMake (CodeLLDB)",
    "build": {
      "command": "cmake",
      "args": ["--build", "build"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/build/main",
    "request": "launch",
    "adapter": "CodeLLDB"
  },
  {
    "label": "Debug C++ File (CodeLLDB)",
    "build": {
      "command": "clang++",
      "args": ["-o", "main", "$ZED_FILE", "-g", "-std=c++23"],
      "cwd": "$ZED_WORKTREE_ROOT"
    },
    "program": "$ZED_WORKTREE_ROOT/main",
    "request": "launch",
    "adapter": "CodeLLDB"
  },
  {
    "label": "Debug active Python file",
    "adapter": "Debugpy",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Debug active JavaScript file",
    "adapter": "JavaScript",
    "program": "$ZED_FILE",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "type": "node-terminal"
  },
  {
    "label": "JavaScript debug terminal",
    "adapter": "JavaScript",
    "request": "launch",
    "cwd": "$ZED_WORKTREE_ROOT",
    "console": "integratedTerminal",
    "type": "pwa-node"
  }
]
